@model trabalho.Models.Treino

@{
    ViewData["Title"] = "Criar Treino";
}

<h1>Adicionar treino</h1>

<h4>Treino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <th>Exercício</th>
                    @*<label asp-for="TreinoExercicioId" class="control-label"></label>*@
                <select asp-for="TreinoExercicioId" class ="form-control" asp-items="ViewBag.ExercicioId"></select>
            </div>
            <div class="form-group">
                <th>Aluno</th>
                @*<label asp-for="AlunoId" class="control-label"></label>*@
                <select asp-for="AlunoId" class ="form-control" asp-items="ViewBag.AlunoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hora" class="control-label"></label>
                <input asp-for="Hora" class="form-control" />
                <span asp-validation-for="Hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar Treino" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
