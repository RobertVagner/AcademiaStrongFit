@model X.PagedList.IPagedList<trabalho.Models.Treino>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Pagina de Treino";
}

<h1 class="display-4">Treino</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar Treino</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Data
                </th>
                <th>
                    Hora
                </th>
                <th>
                    Aluno
                </th>
                <th>
                    Exercicio
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aluno.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TreinoExercicio.TreinoExercicioId)
                    </td>

                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.TreinoId">Editar</a>
                            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.TreinoId">Detalhes</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TreinoId">Apagar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    @Html.PagedListPager(Model, pag => Url.Action("Index",new { pag }))
</div>
